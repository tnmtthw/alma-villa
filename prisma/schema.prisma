generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resident {
  id                String   @id @default(uuid()) @db.Uuid

  // Personal Details
  lastName          String?
  firstName         String?
  middleName        String?
  suffix            String?
  birthDate         String?
  age               String?
  gender            String?
  civilStatus       String?
  nationality       String?
  religion          String?

  // Contact Info
  email             String?
  mobileNumber      String?
  emergencyContact  String?
  emergencyNumber   String?

  // Address
  houseNumber       String?
  street            String?
  purok             String?
  barangay          String?
  city              String?
  province          String?
  zipCode           String?
  residencyLength   String?


  // Government ID
  type            String
  frontId         String
  backId          String

  // Face Verification
  capturedPhoto     String?
  
  // Credintial
  // username          String?  @unique
  username          String?
  password          String?
  role              String       @default("Unverified")

  createdAt         DateTime     @default(now())
}